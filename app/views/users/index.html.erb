<div class="container">

	<%= render "users/info", user: @user, book_new: @book_new %>

	<h2><strong>Users</strong></h2>

	<table>
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td>
					<%= link_to "", :controller => "users", :action => "show" do %>
						<%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
					<% end %>
				</td>
				<td><%= user.name %></td>
				<td><%= link_to "show", user_path(user.id) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

</div>

