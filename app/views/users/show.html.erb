

<div class="container">
	<div class="row">
		
		<% if flash[:notice] %>
	      <div class="flash">
	        <%= flash[:notice] %>
	      </div>
	    <% end %>

		<%= render"users/info", user: @user, book_new: @book_new %>

		<!-- 一覧 -->
		<div class="col-xs-9">
		<table class="table table-striped">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to "", :controller => "users", :action => "show" do %>
							<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
						<% end %>
					</td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>

			</tbody>
		</table>
		</div>
	</div>
</div>
