<div class="container">

<%= form_for(@user) do |f| %>

	<!-- name -->
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

    <!-- profile_image -->
    <div class="form-group has-icon">
    <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>

	<!-- introduction -->
	<div class="form-group has-icon">
        <label class="control-label sr-only" for="inputIntroduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputIntroduction", placeholder:"詳細"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
    <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>

</div>

