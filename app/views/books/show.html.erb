<body>
	<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= link_to @book.title, book_path(@book.id) %></td>
				<td><%= @book.body %></td>
				<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
				<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
			</tr>
		</tbody>
	</table>

</body>