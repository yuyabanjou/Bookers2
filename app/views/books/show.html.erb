<body>
	<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

	<table>
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>
					<%= link_to "", :controller => "users", :action => "show" do %>
						<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
					<% end %>
					<%= link_to @user.name, user_path(@user.id) %>
				</td>
				<td><%= link_to @book.title, book_path(@book.id) %></td>
				<td><%= @book.body %></td>
				<% if @book.user.id == current_user.id %>
				<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
				<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
				<% end %>
			</tr>
		</tbody>
	</table>

</body>